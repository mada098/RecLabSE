@model IEnumerable<Teachlearn.Models.Classroom>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClassroomName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassroomMessage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClassroomName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassroomMessage)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClassroomID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ClassroomID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ClassroomID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
